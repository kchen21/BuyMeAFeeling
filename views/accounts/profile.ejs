<% layout('layout') -%>

<div class="container">
  <div class="row text-center center">
    <div>
      <img class="img-circle" src="<%= user.profile.picture %>" alt="">

      <div style="margin: 16px 0;">
        <p><span style="font-weight: bold;">Name:</span> <%= user.profile.name %></p>
        <p><span style="font-weight: bold;">Email:</span> <%= user.email %></p>

        <% if (user.address === "" || typeof user.address === 'undefined') { %>

          <p><span style="font-weight: bold;">Address:</span> <span style="color: #c0392b; font-weight: bold">You have no address</span></p>

        <% } else { %>

          <p>Address: <%= user.address %></p>

        <% } %>
      </div>

      <a href="/edit-profile" class="btn btn-primary">Edit Profile</a>
    </div>

    <div class="span6 center" style="height: 300px; margin: 32px auto; border: 1px solid #ddd; border-radius: 4px; overflow-y: scroll;">
      <h2 class="text-center">History</h2>

      <table class="table table-striped sticky-header">
        <thead>
          <tr>
            <th>Item Name</th>
            <th>Amount Paid</th>
          </tr>
          <tbody>
            <% for (var i = 0; i < foundUser.history.length; i++) { %>
              <tr>
                <td><%= foundUser.history[i].item.name %></td>
                <td>$<%= foundUser.history[i].paid %></td>
              </tr>
            <% } %>
          </tbody>
        </thead>
      </table>
    </div>
  </div>
</div>
