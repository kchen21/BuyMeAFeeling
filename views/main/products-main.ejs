<% layout('layout') -%>

<div class="hero-unit">
  <div class="container">
    <h1 class="text-center">BuyMeAFeeling</h1>
    <p class="text-center">Find your favorite feeling in the world</p>
    <div class="text-center">
      <input type="text" id="search" class="span6" style="margin-bottom: 0; font-size: 17.5px; height: 34px;" name="search_string" placeholder="Instasearch for a feeling...">
    </div>
  </div>
</div>

<div class="container">
  <div class="row" id="searchResults">
    <% for (var i = 0; i < products.length; i++) { %>
      <div class="span4">
        <a href="/product/<%= products[i]._id %>">
          <div class="thumbnail" style="margin: 8px 0;">
            <img src="<%= products[i].image %>">
            <div class="caption">
              <h3><%= products[i].name %></h3>
              <p>Category: <%= capitalize(products[i].category.name) %></p>
              <p>$<%= products[i].price %></p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>

  <div class="pagination text-center" id="pageList">
    <ul>
      <% for (var i = 1; i <= pages; i++) { %>
        <% if (i === 1) { %>
          <li><a href="/"><%= i %></a></li>
        <% } else { %>
          <li><a href="/page/<%= i %>"><%= i %></a></li>
        <% } %>
      <% } %>
    </ul>
  </div>
</div>
