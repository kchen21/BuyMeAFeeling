<% layout('layout') -%>

<div class="hero-unit">
  <div class="container">
    <h1>Buy Me A Feeling</h1>
    <p>Find your favorite feeling</p>
    <!-- <p><a href="#" class="btn btn-primary btn-large">Signup &raquo;</a></p> -->
  </div>
</div>

<div class="container">
  <div class="row">
    <% for (var i = 0; i < products.length; i++) { %>
      <div class="span4">
        <a href="/product/<%= products[i]._id %>">
          <div class="thumbnail">
            <img src="<%= products[i].image %>">
            <div class="caption">
              <h3><%= products[i].name %></h3>
              <p><%= products[i].category.name %></p>
              <p>$<%= products[i].price %></p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>

  <div class="pagination text-center">
    <ul>
      <% for (var i = 1; i <= pages; i++) { %>
        <% if (i === 1) { %>
          <li><a href="/"><%= i %></a></li>
        <% } else { %>
          <li><a href="/page/<%= i %>"><%= i %></a></li>
        <% } %>
      <% } %>
    </ul>
  </div>
</div>
