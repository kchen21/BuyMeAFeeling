<% layout('layout') -%>

<div class="container">
  <div class="row">
    <div class="span7">
      <img src="<%= product.image %>">
    </div>

    <div class="span1">
    </div>

    <div class="span4">
      <h3><%= product.name %></h3>
      <h1>$<%= product.price %></h1>

      <form method="post">
        <div class="btn-group" style="padding: 8px 0; role="group" aria-label="...">
          <input type="hidden" name="quantity" id="quantity" value="1">
          <button type="button" id="minus" class="btn btn-default">-</button>
          <button type="button" id="total" class="btn btn-default">1</button>
          <button type="button" id="plus" class="btn btn-default">+</button>
        </div>

        <div class="form-group">
          <input type="hidden" name="product_id" value="<%= product._id %>">
          <input type="hidden" name="productOfOne" id="priceOfOne" value="<%= product.price %>">

          <input type="text" name="priceValue" id="priceValue" class="form-control" value="<%= product.price %>" readonly>
        </div>

        <% if (user) { %>
          <button type="submit" class="btn btn-primary btn-large">Add to Cart</button>
        <% } else { %>
          <a href='/signup' class="btn btn-warning btn-large">Sign In to Purchase</a>
        <% } %>
      </form>
    </div>
  </div>
</div>
