<% layout('layout') -%>

<div class="container">
  <h1 class="text-center"><%= products[0].category.name %> feelings</h1>
  <div class="row">
    <% for (var i = 0; i < products.length; i++) { %>
      <div class="span4">
        <a href="/product/<%= products[i]._id %>">
          <div class="thumbnail" style="margin: 8px 0;">
            <img src="<%= products[i].image %>">
            <div class="caption">
              <h3><%= products[i].name %></h3>
              <p><%= products[i].category.name %></p>
              <p>$<%= products[i].price %></p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
